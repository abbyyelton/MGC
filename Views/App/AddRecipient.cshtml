@model MGC.ViewModels.RecipientViewModel
@{
    ViewBag.Title = "Add Recipient";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Add a recipient</h2>
        <form class="form-horizontal" role="form" method="post" novalidate>
            <span asp-validation-summary="ModelOnly"></span>
            <div class="form-group">
                <label asp-for="Name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" id="name" ng-model="name">
                </div>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="col-sm-2 control-label">Birthday</label>
                <div class="col-sm-10">
                    <input asp-for="Birthday" type="date" class="form-control" id="birthday" ng-model="birthday">
                </div>
                <span asp-validation-for="Birthday"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Email" type="email" class="form-control" id="email" ng-model="email">
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Recipient" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
